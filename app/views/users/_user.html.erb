<tr>
  <td><%= gravatar_for user, size: 32 %></td>
  <td>
    <%= link_to user.name, user %>
    <% if signed_in? && current_user.admin? && !current_user?(user) %>
      <%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure you want to delete #{user.name}?" } %>
    <% end %>
  </td>
</tr>
