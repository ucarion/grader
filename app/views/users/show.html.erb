<% provide(:title, @user.name) %>
<div class="row-fluid">
  <div class="span2">
    <%= gravatar_for @user %>
  </div>
  <div class="span6">
    <h1><%= @user.name %></h1>
    <h3>Enrolled in <%= @user.enrolled_courses.count %> courses.</h3>
    <h3>Teaching <%= @user.taught_courses.count %> courses.</h3>
  </div>
  <div class="span4">
    <ul class="icons-ul">
      <li><i class="icon-li icon-envelope-alt"></i>Email: <%= mail_to @user.email %></li>
    </ul>
  </div>
</div>
