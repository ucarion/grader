<%= provide(:title, @course.name) %>

<h1><%= @course.name %></h1>
<h3>Taught by <%= link_to @course.teacher.name, @course.teacher %></h3>
<%= render 'enroll_button' %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Assignments</a></li>
    <li><a href="#tab2" data-toggle="tab">Students</a></li>
    <li><a href="#tab3" data-toggle="tab">About</a></li>
    <% if @course.teacher == current_user %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            Options
            <b class="caret"></b>
          </a>
        <ul class="dropdown-menu">
          <li><%= link_with_icon "pencil", "Edit Course", edit_course_path(@course) %></li>
          <li>
            <%= link_with_icon "trash", "Delete Course", @course, method: :delete,
              data: { confirm: "Are you sure you want to delete #{@course.name}?" } %></li>
        </ul>
      </li>
    <% end %>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <%= render 'add_assignment_button' %>
      <%= render 'course_assignments_list' %>
    </div>
    <div class="tab-pane" id="tab2">
      <%= render 'course_students_table' %>
    </div>
    <div class="tab-pane" id="tab3">
      <%= @course.description %>
    </div>
  </div>
</div>
