<% provide(:title, "Edit Course") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit Course</h1>
    <%= form_for(@course, html: { role: :form }) do |f| %>
      <%= render 'shared/course_error_messages' %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'code-field form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :language %>
        <%= f.select :language, Language.select_options, {}, { class: 'form-control' } %>
      </div>

      <%= submit_btn "Submit changes", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
