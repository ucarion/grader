<% provide(:title, "Submissions for #{@assignment.name}") %>

<h1>Submissions for <%= @assignment.name %></h1>
<table class="table table-striped table-bordered list-users-table">
  <tr>
    <th></th>
    <th>Student</th>
    <th>Grade</th>
    <th>Status</th>
  </tr>
  <% @assignment.submissions.each do |submission| %>
    <tr class="<%= table_class_for_status(submission.status) %>">
      <td><%= gravatar_for submission.author, size: 60 %></td>
      <td><%= link_to submission.author.name, submission %></td>
      <td>
        <% if submission.grade %>
          <%= submission.grade %> / <%= @assignment.point_value %>
        <% else %>
          <i>Ungraded</i>
        <% end %>
      </td>
      <td><%= submission.status_as_string.capitalize %></td>
    </tr>
  <% end %>
</table>
