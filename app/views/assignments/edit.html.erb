<% provide(:title, "Edit Assignment") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit Assignment</h1>

    <%= form_for(@assignment) do |f| %>
      <%= render 'shared/assignment_error_messages' %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'code-field form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input %>
        <%= f.text_area :input, spellcheck: false,
            class: 'code-field form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :expected_output %>
        <%= f.text_area :expected_output, spellcheck: false,
            class: 'code-field form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :point_value %>
        <%= f.text_field :point_value, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :max_attempts %>
        <%= f.text_field :max_attempts, class: 'form-control',
            value: default_assignment_max_attempts %>
      </div>

      <div class="form-group">
        <%= f.label :due_time %>
        <%= f.text_field :due_time, class: 'datepicker form-control',
            value: format_date(@assignment.due_time) %>
      </div>

      <div class="form-group">
        <%= f.label :grace_period %>
        <%= f.text_field :grace_period, class: 'form-control',
            value: default_assignment_grace_period, id: 'grace-period' %>
      </div>

      <%= submit_btn "Submit Changes", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
