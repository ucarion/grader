<div class="btn-group" id="admin-assignment-btn">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <%= fa_icon 'gear fw' %> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Edit Assignment", edit_assignment_path(@assignment) %></li>
    <li>
      <%= link_to "Delete Assignment", @assignment, method: :delete,
        data: { confirm: "Are you sure you want to delete #{@assignment.name}?" } %>
    </li>
  </ul>
</div>
