<% provide(:title, "Create a new assignment") %>
<h1>Create a new Assignment</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([@course, @assignment]) do |f| %>
      <%= render 'shared/assignment_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :expected_output %>
      <%= f.text_area :expected_output %>

      <%= f.label :point_value %>
      <%= f.text_field :point_value %>

      <%= f.label :due_time %>
      <%= f.text_field :due_time, class: "datepicker" %>

      <%= f.submit "Create Assignment", class: "btn btn-large" %>
    <% end %>
  </div>
</div>
