<% provide(:title, "Create a new assignment") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a new Assignment</h1>

    <%= form_for([@course, @assignment], html: { role: :form }) do |f| %>
      <%= render 'shared/assignment_error_messages' %>

      <%= f.hidden_field :course_id, value: @course.id %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :input %>
        <%= f.text_area :input, spellcheck: false,
            class: 'code-field form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :expected_output %>
        <%= f.text_area :expected_output, spellcheck: false,
            class: 'code-field form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :point_value %>
        <%= f.text_field :point_value, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :due_time %>
        <%= f.text_field :due_time, class: 'datepicker form-control' %>
      </div>

      <%= submit_btn "Create Assignment", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
